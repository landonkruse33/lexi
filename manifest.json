{
  "manifest_version": 3,
  "name": "Trigram Text Predictor",
  "version": "1.0",
  "description": "A Chrome extension that predicts the next word based on user input.",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "lexi-icon-16.png",
      "32": "lexi-icon-32.png",
      "48": "lexi-icon-48.png",
      "128": "lexi-icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
